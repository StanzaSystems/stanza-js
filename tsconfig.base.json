{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@getstanza/browser": ["packages/browser/index.ts"],
      "@getstanza/mobile": ["packages/mobile/index.ts"],
      "@getstanza/core": ["packages/core/index.ts"],
      "@getstanza/hub-client-api": ["packages/hub/client-api/src/index.ts"],
      "@getstanza/hub-client-grpc": ["packages/hub/client-grpc/src/index.ts"],
      "@getstanza/hub-client-http": ["packages/hub/client-http/src/index.ts"],
      "@getstanza/mocks-browser": ["packages/mocks/browser/src/index.ts"],
      "@getstanza/mocks-handlers": ["packages/mocks/handlers/src/index.ts"],
      "@getstanza/mocks-server": ["packages/mocks/server/src/index.ts"],
      "@getstanza/next": ["packages/next/index.ts"],
      "@getstanza/next-node": ["packages/next-node/index.ts"],
      "@getstanza/node": ["packages/sdk-node/src/index.ts"],
      "@getstanza/react": ["packages/stanza-react/index.ts"],
      "@getstanza/react-native": ["packages/stanza-rn/src/index.ts"],
      "@getstanza/sdk-base": ["packages/sdk-base/src/index.ts"],
      "@getstanza/sdk-cloudflare": ["packages/sdk-cloudflare/src/index.ts"],
      "@getstanza/sdk-utils": ["packages/sdk-utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
