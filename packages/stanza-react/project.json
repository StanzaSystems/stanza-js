{
  "name": "stanza-react",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/stanza-react",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/stanza-react"
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs next {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/stanza-react/**/*.{ts,tsx,js,jsx}",
          "packages/stanza-react/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["coverage/packages/next-node"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/next-node"
      }
    }
  }
}
