{
  "name": "next-node",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/next-node/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/next-node",
        "main": "packages/next-node/index.ts",
        "tsConfig": "packages/next-node/tsconfig.lib.json",
        "assets": ["packages/next-node/*.md"],
        "generatePackageJson": true
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs next-node {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/next-node/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["coverage/packages/next-node"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/next-node"
      }
    }
  },
  "tags": []
}
