{
  "name": "node",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/node/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/node",
        "main": "packages/node/index.ts",
        "tsConfig": "packages/node/tsconfig.lib.json",
        "assets": ["packages/node/*.md"],
        "generatePackageJson": true,
        "esbuildOptions": {
          "packages": "external"
        }
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs node {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/node/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["coverage/packages/node"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/node"
      }
    }
  },
  "tags": []
}
