{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src", "prisma"],
  "exclude": ["node_modules"],
  "ts-node": {
    "transpileOnly": true
  }
}